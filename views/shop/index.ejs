<body>
    <header class="main-header">
        <nav class="main-header_nav">
            <ul class="main-header_list-item">
                <li class="main-header_list">
                    <a  href="/">Shop</a>
                </li>
                <li class="main-header_list">
                    <a href="/add-product">Add Product</a>
                </li>
                <li class="main-header_list">
                    <a href="/admin-product-list">Admin Products</a>
                </li>
                <li class="main-header_list">
                    <a href="/product_list"> Products</a>
                </li>
                <li class="main-header_list">
                    <a href="/cart">Cart</a>
                </li>
                <li class="main-header_list">
                    <a  href="/order">Order</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>


        <!-- display my product -->

        <% if(prods.length > 0) {%>
        <div class="grid" >
            <% for(let product of prods) { %>

              <article class="card product-item">
                <header class="card_header">
                    <h1 class="product_title"><%= product.title %></h1>
                </header>
                <div class="card_image">
                    <img src="<%= product.imageUrl %>">   
                        
                </div>

                <div class="card_content">
                    <h2 class="product_price">$<%= product.price %></h2>
                    <p class="produt_description"><%= product.description %></p>
                </div>

                <div class="card_actions">
                    <form action="/cart" method="POST">
                        <button class="btn" type="submit">Add To Cart</button>
                        <input type="hidden" name="productId" value="<%=product.id%>">
                     </form>
                </div>
             </article>
            <% } %>

        </div>
        <% } else  {%>
        <h1>No Product Found</h1>
        <% } %>
    </main>
</body>

